<section id="contacts">
    <div class="container">
        <div id="book" class="box-large">
            <div id="list">
                <h1>Contacts</h1>
                <div class="content">
                    {{#each contacts}}
                        <div class="contact" data-id="{{@index}}">
                            <span class="avatar small">&#9787;</span>
                            <span class="title">{{firstName}} {{lastName}}</span>
                        </div>
                    {{/each}}
                </div>
            </div>
            <div id="details">
                <h1>Details</h1>
                <div class="content">
                    <div class="info" id="details-template">
                        <div class="col">
                            <span class="avatar">&#9787;</span>
                        </div>
                        <div class="col">
                            <span class="name">{{firstName}}</span>
                            <span class="name">{{lastName}}</span>
                        </div>
                    </div>
                    <div class="info">
                        <span class="info-line">&phone; {{phone}}</span>
                        <span class="info-line">&#9993; {{email}}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>