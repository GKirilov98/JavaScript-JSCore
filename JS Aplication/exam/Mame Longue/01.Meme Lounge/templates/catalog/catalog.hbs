{{> header}}

<div id="meme-feed">
    <h1>Meme Feed</h1>
    <div id="memes">
        {{#each mames}}
            <div class="meme">
                <a class="meme-title">{{title}}</a>
                <br>
                <a><img class="meme-image"
                                 src="{{imageUrl}}"></a>
                <div class="info">

                    <div id="data-buttons">
                        <a href="#/details/:{{_id}}" class="custom-button">Check Out</a>
                        {{#if isAuthor}}
                            <a href="#/edit/:{{_id}}" class="custom-button">Edit</a>
                            <a href="#/delete/:{{_id}}" class="custom-button">Delete</a>
                        {{/if}}
                        <a class="creator">Creator: {{creator}}</a>
                    </div>
                </div>
                <hr>
            </div>
        {{else}}
            <p class="no-memes">No memes in database.</p>
        {{/each}}
    </div>
</div>

{{> footer}}